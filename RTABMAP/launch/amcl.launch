<?xml version="1.0"?>
<launch>

  <!-- Map Server -->
  <arg name="map_file" default="$(find my_localization)/maps/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- AMCL Node -->
  <node name="amcl" pkg="amcl" type="amcl" output="screen">
     <remap from="scan" to="/scan"/>
     <param name="odom_frame_id" value="odom"/>
     <param name="odom_model_type" value="diff-corrected"/>
     <param name="base_frame_id" value="robot_footprint"/>
     <param name="global_frame_id" value="map"/>

     <param name="initial_pose_x" value="0"/>
     <param name="initial_pose_y" value="0"/>
     <param name="min_particles" value="10"/>
     <param name="max_particles" value="1000"/>
     <param name="update_min_d" value="0.1"/>
     <param name="update_min_a" value="0.2"/>
  </node>
  <!-- Move Base -->
  <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
  <remap from="scan" to="my_localization/laser/scan"/>
  <param name="base_global_planner" value="navfn/NavfnROS" />
  <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
  <rosparam file="$(find my_localization)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
  <rosparam file="$(find my_localization)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
  <rosparam file="$(find my_localization)/config/local_costmap_params.yaml" command="load" />
  <rosparam file="$(find my_localization)/config/global_costmap_params.yaml" command="load" />
  <rosparam file="$(find my_localization)/config/base_local_planner_params.yaml" command="load" />

  </node>
<!--node type="rviz" name="rviz" pkg="rviz" args="-d $(find my_localization)/rviz/config_file.rviz" / -->

</launch>
